<% if @daywisemenus.blank? %>
<p>There are not any menu's currently in the app.</p>
<% else %>
<p>These are the current Menuitems in our app</p>
<ul id="books">
<% @daywisemenus.each do |c| %>
<li><%= link_to c.menuitem, {:action => 'show', :id => c.id} -%>
<b> <%= link_to 'Edit', {:action => "edit",
:id => c.id} %></b>
<b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
:confirm => "Are you sure you want to delete this item?" %></b></li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new MenuItem", {:action => 'new' }%></p>