<h1>Edit Menu Items</h1>
<% form_tag :action => 'update', :id => @daywisemenu do %>

<p><label for="book_title">Name of menuitem</label>:
<%= text_field 'daywisemenu', 'menuitem' %></p>


<p><label for="book_subject">Select a Day</label>:
<%= collection_select(:daywisemenu,:day_id,@days,:id,:dayname) %></p>


<%= submit_tag "Save changes" %>
<% end %>
<%= link_to 'Back', {:action => 'list' } %>
